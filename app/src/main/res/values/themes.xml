<resources>
    <!-- I call it mah style! -->
    <style name="Theme.RxRoom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/dribblePink</item>
        <item name="colorPrimaryDark">@color/dribblePink</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/dribblePink</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="colorControlActivated">@color/dribblePink</item>
        <item name="colorSwitchThumbNormal">@color/grey1</item>
        <item name="android:colorForeground">@color/grey1</item>
        <item name="android:textColorPrimary">@color/grey3</item>
        <item name="android:textColorSecondary">@color/grey2</item>
        <item name="fontFamily">@font/calibre</item>
    </style>
    
    <style name="WideButtonStyle" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:backgroundTint">@color/dribblePink</item>
        <item name="android:fontFamily">@font/calibre_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:buttonStyle">"?android:attr/borderlessButtonStyle"</item>
    </style>
</resources>